        const itemsPerPage = 4;

        function renderBrands() {
            const brands = [...new Set(products.map(product => product.brand))];

            const brandImages = {
                'Rolex': 'https://www.bobswatches.com/rolex-blog/wp-content/uploads/2017/01/Green-Gold-Rolex-GMT-Master.jpg',
                'Omega': 'https://www.watchesworld.com/wp-content/uploads/2023/10/OMEGA-Speedmaster-Moonwatch-Professional-Chronograph-06.jpg',
                'IWC': 'https://www.analogshift.com/cdn/shop/files/AS08946_40970079_IWC_PILOT_SWATCHCHRONOTOPGUNCERTATANIUM_IW388106-7.jpg?v=1695152008',
                'Cartier': 'https://www.swisswatchexpo.com/TheWatchClub/wp-content/uploads/2023/01/Santos-Dumont.png',
                // Add more brand images as needed
            };

            const brandList = document.getElementById('brand-list');
            brandList.innerHTML = brands.slice(0, 5).map(brand => `
                <div class="brand-image-container cursor-pointer" data-brand="${brand}">
                    <img src="${brandImages[brand]}" alt="${brand}">
                    <div class="brand-name">${brand}</div>
                </div>
            `).join('');

            brandList.querySelectorAll('.brand-image-container').forEach(container => {
                container.addEventListener('click', () => {
                    const brand = container.dataset.brand;
                    showBrandProducts(brand);
                });
            });
        }

        function renderProducts(page) {
            const startIndex = (page - 1) * itemsPerPage;
            const endIndex = startIndex + itemsPerPage;
            const items = products.slice(startIndex, endIndex);

            const storeItems = document.getElementById('store-items');
            storeItems.innerHTML = '';
            items.forEach(item => {
                const div = document.createElement('div');
                div.classList.add('hover:grow', 'relative', 'overflow-hidden');
                const img = document.createElement('img');
                img.classList.add('w-full', 'object-cover');
                img.src = item.imageSrc;
                img.alt = 'product image';
                img.dataset.brand = item.brand;

                const overlay = document.createElement('div');
                overlay.classList.add('absolute', 'inset-0', 'bg-black', 'opacity-25', 'transition-opacity', 'duration-300', 'ease-in-out');

                const details = document.createElement('div');
                details.classList.add('absolute', 'inset-0', 'flex', 'items-center', 'justify-center', 'text-white', 'text-xl', 'opacity-0', 'hover:opacity-100', 'transition-opacity', 'duration-300', 'ease-in-out');
                details.textContent = 'View Details';
                details.addEventListener('click', () => {
                    showBrandProducts(item.brand);
                });

                div.appendChild(img);
                div.appendChild(overlay);
                div.appendChild(details);
                storeItems.appendChild(div);
            });
        }

        function renderPagination() {
            const totalPages = Math.ceil(products.length / itemsPerPage);
            const pagination = document.querySelector('#pagination ul');
            pagination.innerHTML = '';

            for (let i = 1; i <= totalPages; i++) {
                const li = document.createElement('li');
                li.classList.add('page-item');
                if (i === 1) {
                    li.classList.add('active');
                }
                const a = document.createElement('a');
                a.classList.add('page-link');
                a.href = '#';
                a.textContent = i;
                a.addEventListener('click', function () {
                    const currentPage = parseInt(this.textContent);
                    renderProducts(currentPage);
                    const paginationLinks = document.querySelectorAll('#pagination .page-item');
                    paginationLinks.forEach(link => link.classList.remove('active'));
                    this.parentElement.classList.add('active');
                });
                li.appendChild(a);
                pagination.appendChild(li);
            }

            const prevButton = document.createElement('li');
            prevButton.classList.add('page-item');
            prevButton.innerHTML = '<a class="page-link" href="#">Previous</a>';
            prevButton.addEventListener('click', function () {
                const currentPage = document.querySelector('#pagination .active');
                if (currentPage.previousElementSibling) {
                    currentPage.previousElementSibling.firstChild.click();
                }
            });
            pagination.insertBefore(prevButton, pagination.firstChild);

            const nextButton = document.createElement('li');
            nextButton.classList.add('page-item');
            nextButton.innerHTML = '<a class="page-link" href="#">Next</a>';
            nextButton.addEventListener('click', function () {
                const currentPage = document.querySelector('#pagination .active');
                if (currentPage.nextElementSibling) {
                    currentPage.nextElementSibling.firstChild.click();
                }
            });
            pagination.appendChild(nextButton);
        }

function showBrandProducts(brand) {
    const brandProducts = products.filter(product => product.brand === brand);

    const productDetails = document.getElementById('product-details');
    productDetails.innerHTML = `
        <div class="p-4 bg-white shadow-md rounded-lg max-w-4xl w-full">
            <h2 class="text-2xl font-bold mb-4">${brand}</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                ${brandProducts.map(product => `
                    <div class="hover:grow relative overflow-hidden">
                        <img class="w-full object-cover" src="${product.imageSrc}" alt="${product.title}">
                        <div class="absolute inset-0 flex items-center justify-center text-white text-xl opacity-0 hover:opacity-100 transition-opacity duration-300 ease-in-out">
                            <div class="p-4 bg-white shadow-md rounded-lg">
                                <h2 class="text-2xl font-bold mb-4 text-black">${product.title}</h2>
                            </div>
                        </div>
                    </div>
                `).join('')}
            </div>
            <button id="close-details" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4">
                Close
            </button>
        </div>
    `;
    productDetails.classList.remove('hidden');

    document.getElementById('close-details').addEventListener('click', () => {
        productDetails.classList.add('hidden');
    });
}



        function initializeStore() {
            renderBrands();
            renderProducts(1);
            renderPagination();
        }

        document.addEventListener('DOMContentLoaded', initializeStore);


