        function showProductDetails(product) {
            const productDetails = document.getElementById('product-details');
            productDetails.innerHTML = `
                            <div class="p-4 bg-white shadow-md rounded-lg">
                                <h2 class="text-2xl font-bold mb-4">${product.name}</h2>
                               <img src="${product.image}" alt="product image" class="w-full h-64 object-cover mb-4">
                                <p class="text-gray-700 mb-2"><strong>Brand:</strong> ${product.brand}</p>
                                <p class="text-gray-700 mb-2"><strong>Series:</strong> ${product.series}</p>
                                <p class="text-gray-700 mb-2"><strong>Case Size:</strong> ${product.caseSize}</p>
                                <p class="text-gray-700 mb-2"><strong>Price:</strong> ${product.price}</p>
                                <p class="text-gray-700 mb-2"><strong>Year:</strong> ${product.year}</p>
                                <p class="text-gray-700 mb-4">${product.description}</p>
                                <button id="close-details" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Close</button>
                            </div>
                        `;
            productDetails.classList.remove('hidden');
            document.getElementById('close-details').addEventListener('click', () => {
                productDetails.classList.add('hidden');
            });
        }
