                    { imageSrc: 'https://www.watchstore.vn/images/products/others/2024/large/untitled-1-1658644560459-1712587025.webp', title: 'Product 5', description: 'Description for Product 5', brand: 'Brand B', series: 'Series 2', caseSize: 'Medium', price: 'Medium', year: '2022' },
                    { imageSrc: 'https://www.watchstore.vn/images/products/others/2024/large/210.22-1712726137.webp', title: 'Product 6', description: 'Description for Product 6', brand: 'Brand C', series: 'Series 3', caseSize: 'Large', price: 'High', year: '2023' },
                    { imageSrc: 'https://www.watchstore.vn/images/products/others/2024/large/210-22-42-20-03-002-1-1665630830972-1712588236.webp', title: 'Product 7', description: 'Description for Product 7', brand: 'Brand A', series: 'Series 1', caseSize: 'Small', price: 'Low', year: '2021' },
                    { imageSrc: 'https://www.watchstore.vn/images/products/others/2024/large/1-1665112134329-1712588421.webp', title: 'Product 8', description: 'Description for Product 8', brand: 'Brand B', series: 'Series 2', caseSize: 'Medium', price: 'Medium', year: '2022' },
                    { imageSrc: 'https://www.watchstore.vn/images/products/others/2024/large/67-1679291689156-1712661798.webp', title: 'Product 9', description: 'Description for Product 9', brand: 'Brand C', series: 'Series 3', caseSize: 'Large', price: 'High', year: '2023' },
                    // Thêm các sản phẩm khác vào đây nếu cần
                ];

                const itemsPerPage = 4;

                function getFilteredProducts() {
                    const brand = document.getElementById('filter-brand').value;
                    const series = document.getElementById('filter-series').value;
                    const caseSize = document.getElementById('filter-case-size').value;
                    const price = document.getElementById('filter-price').value;
                    const year = document.getElementById('filter-year').value;

                    return products.filter(product => {
                        return (brand === 'All' || product.brand === brand) &&
                            (series === 'All' || product.series === series) &&
                            (caseSize === 'All' || product.caseSize === caseSize) &&
                            (price === 'All' || product.price === price) &&
                            (year === 'All' || product.year === year);
                    });
                }

                function renderProducts(page) {
                    const filteredProducts = getFilteredProducts();
                    const startIndex = (page - 1) * itemsPerPage;
                    const endIndex = startIndex + itemsPerPage;
                    const items = filteredProducts.slice(startIndex, endIndex);

                    const storeItems = document.getElementById('store-items');
                    storeItems.innerHTML = '';
                    items.forEach(item => {
                        const div = document.createElement('div');
                        div.classList.add('hover:grow', 'relative', 'overflow-hidden');
                        const img = document.createElement('img');
                        img.classList.add('w-full', 'object-cover');
                        img.src = item.imageSrc;
                        img.alt = 'product image';

                        const overlay = document.createElement('div');
                        overlay.classList.add('absolute', 'inset-0', 'bg-black', 'opacity-25', 'transition-opacity', 'duration-300', 'ease-in-out');

                        const details = document.createElement('div');
                        details.classList.add('absolute', 'inset-0', 'flex', 'items-center', 'justify-center', 'text-white', 'text-xl', 'opacity-0', 'hover:opacity-100', 'transition-opacity', 'duration-300', 'ease-in-out');
                        details.textContent = 'View Details';
                        details.addEventListener('click', () => {
                            showProductDetails(item);
                        });

                        div.appendChild(img);
                        div.appendChild(overlay);
                        div.appendChild(details);
                        storeItems.appendChild(div);
                    });
                }

                function renderPagination() {
                    const filteredProducts = getFilteredProducts();
                    const totalPages = Math.ceil(filteredProducts.length / itemsPerPage);
                    const pagination = document.querySelector('#pagination ul');
                    pagination.innerHTML = '';

                    for (let i = 1; i <= totalPages; i++) {
                        const li = document.createElement('li');
                        li.classList.add('page-item');
                        if (i === 1) {
                            li.classList.add('active');
                        }
                        const a = document.createElement('a');
                        a.classList.add('page-link');
                        a.href = '#';
                        a.textContent = i;
                        a.addEventListener('click', function () {
                            const currentPage = parseInt(this.textContent);
                            renderProducts(currentPage);
                            const paginationLinks = document.querySelectorAll('#pagination .page-item');
                            paginationLinks.forEach(link => link.classList.remove('active'));
                            this.parentElement.classList.add('active');
                        });
                        li.appendChild(a);
                        pagination.appendChild(li);
                    }

