<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Cart</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Shopping Cart</h1>
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Sử dụng vòng lặp Handlebars để hiển thị thông tin của mỗi sản phẩm trong giỏ hàng -->
            {{#each cart.items}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.price}}</td>
                <td>{{this.quantity}}</td>
                <td>
                    <button onclick="removeFromCart('{{this.productId}}')">Remove</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <script>
        // Hàm JavaScript để xóa sản phẩm khỏi giỏ hàng
        async function removeFromCart(productId) {
            const response = await fetch(`/cart/remove-from-cart/${productId}`, {
                method: 'POST'
            });
            if (response.ok) {
                // Sau khi xóa sản phẩm, làm mới trang để cập nhật giỏ hàng
                window.location.reload();
            } else {
                alert('Failed to remove product');
            }
        }
    </script>
</body>
</html>
